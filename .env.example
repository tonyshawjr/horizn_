# horizn_ Analytics Platform - Environment Configuration
# Copy this file to .env and configure your environment variables

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_KEY=your-secret-key-here-change-this

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=horizn_analytics
DB_USER=horizn_user
DB_PASS=secure_password_here

# Read Replica (Optional)
DB_READ_HOST=localhost
DB_READ_PORT=3306
DB_READ_USER=horizn_read_user
DB_READ_PASS=secure_read_password

# Database Performance
DB_POOL_ENABLED=true
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_QUERY_CACHE=true
DB_SLOW_LOG=true
DB_SLOW_THRESHOLD=2.0

# Security Settings
IP_SALT=change-this-salt-for-ip-hashing
SESSION_SECURE=true
CSRF_TOKEN_LENGTH=32

# Cache Configuration
CACHE_ENABLED=true
CACHE_DRIVER=file
CACHE_TTL=3600

# Redis (if using Redis cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration (Optional)
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="horizn_ Analytics"

# Logging
LOG_LEVEL=INFO
LOG_PATH=/var/log/horizn

# Analytics Configuration
DATA_RETENTION_DAYS=365
SESSION_TIMEOUT=1800
MAX_EVENTS_PER_SESSION=1000
ENABLE_GEOLOCATION=true
ENABLE_REALTIME=true

# API Rate Limiting
API_RATE_LIMIT_TRACKING=1000
API_RATE_LIMIT_DASHBOARD=60
API_RATE_LIMIT_AUTH=10

# Backup Configuration
DB_BACKUP_ENABLED=true
DB_BACKUP_FREQUENCY=daily
DB_BACKUP_RETENTION=30
DB_BACKUP_COMPRESS=true

# Monitoring
DB_MONITORING=true
DB_LOG_QUERIES=false
DB_ALERT_SLOW=true
DB_ALERT_CONNECTIONS=80

# Development Only (Remove in Production)
DEV_MODE=false
SHOW_ERRORS=false
PROFILER_ENABLED=false

# Third-party Integrations (Optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook
# DISCORD_WEBHOOK_URL=https://discord.com/your-webhook

# SSL Configuration (Production)
SSL_VERIFY_PEER=true
SSL_VERIFY_HOST=2
SSL_CAINFO=/path/to/ca-bundle.crt